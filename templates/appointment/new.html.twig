{% extends 'home/base.html.twig' %}

{% block body %}
<div class="container" style="margin-top: 220px;margin-bottom: 500px;">
    <h1 class="mb-4 text-center">Créer un Nouveau Rendez-vous</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ include('appointment/_form.html.twig') }}
        </div>
    </div>

    <div class="mt-3 text-end"> <!-- Ajout de text-end pour aligner à droite -->
        <a href="{{ path('app_doctor_list') }}" class="btn btn-secondary btn-action px-4">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>

<script>
.btn-action {
    border: 2px solid transparent;
    border-radius: 0.8rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 500;
    letter-spacing: 0.5px;
    padding: 0.75rem 1.5rem;
}

.btn-action:hover {
    background-color:rgb(83, 93, 107);
    border-color:rgb(42, 46, 51);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(65, 78, 97, 0.25);
}

.btn-action:active {
    transform: translateY(0);
    box-shadow: none;
}
</script>
{% endblock %}
