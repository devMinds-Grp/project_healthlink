{% extends 'home/base.html.twig' %}

{% block title %}Donation Responses{% endblock %}

{% block body %}
<div class="container" style="margin-top: 220px;margin-bottom: 500px;">

    <h1 class="text-center mb-4">Listes des r√©ponses</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th class="col-8 text-center ">Description</th>  <!-- Colonne Description plus large -->
                <th class="col-4 text-center ">Actions</th>      <!-- Colonne Actions plus petite -->
            </tr>
        </thead>
        <tbody>
        {% for donation_response in donation_responses %}
            <tr>
                <td>{{ donation_response.Description }}</td>
                <td>
                    <a href="{{ path('app_donation_response_show', {'id': donation_response.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_donation_response_edit', {'id': donation_response.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" class="text-center text-muted">Il n y a pas des dons</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        <a href="{{ path('app_donation_response_new') }}" class="btn btn-success">Creer une nouvelle Reponse</a>
    </div>
</div>
{% endblock %}
