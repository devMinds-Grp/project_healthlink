{% extends 'home/base.html.twig' %}

{% block title %}New Care{% endblock %}

{% block body %}
<div class="container" style="margin-top: 220px;margin-bottom: 500px;">
    <h1 class="text-center text-primary mb-4 fw-bold">ðŸ©º Create New Care</h1>

    <div class="card p-4 shadow-lg border-0 rounded-4 bg-white">
        <div class="card-body">
            <form method="post" novalidate> {# Disable HTML5 validation #}
                {% for field in form %}
                    <div class="mb-3">
                        <!-- Explicitly render the label -->
                        <label class="form-label fw-semibold text-secondary">{{ form_label(field) }}</label>
                        
                        <!-- Render the input field with error class if needed -->
                        {{ form_widget(field, {'attr': {'class': 'form-control rounded-3' ~ (field.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        
                        <!-- Display error messages in red -->
                        {% if field.vars.errors|length > 0 %}
                            <div class="text-danger mt-1 fw-semibold">
                                {% for error in field.vars.errors %}
                                    <p class="mb-0">{{ error.message }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}

                <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 shadow-sm">
                    <i class="fas fa-save me-2"></i> Save
                </button>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_care_index') }}" class="btn btn-outline-primary btn-lg rounded-pill px-4 py-2 shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
</div>

{% endblock %}
