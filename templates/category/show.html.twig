{% extends 'admin_base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-category-alt bx-lg text-primary"></i>
                    </div>
                    <h4 class="card-title text-uppercase fw-bold">{{ category.nom }}</h4>
                    <p class="text-muted">ID: {{ category.id }}</p>

                    <div class="d-flex justify-content-center mt-4">
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning me-2">
                            <i class="bx bx-edit-alt"></i> Modifier
                        </a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                    <i class="bx bx-arrow-back"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
