{% extends 'admin_base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Liste des Catégories</h2>
<div class="card mb-3">
    <table class="table  table-striped table-hover">
        <thead class="table">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr  style="cursor: pointer;">
                    <td>{{ category.id }}</td>
                    <td>{{ category.nom }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_category_new') }}" class="btn btn-success">
        <i class='bx bx-plus-circle'></i> Ajouter une catégorie
    </a>
</div>
{% endblock %}
