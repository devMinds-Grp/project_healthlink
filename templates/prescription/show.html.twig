{% extends 'home/base.html.twig' %}

{% block body %}
<div class="container prescription-details" style="margin-top: 150px; margin-bottom: 100px;">
    <h1 class="mb-4 text-center">Détails de la Prescription</h1>

    <div class="text-left mb-4">
        <a href="{{ path('app_prescription_index') }}" class="btn btn-custom-secondary">Retour à la liste</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Nom du médicament</th>
                        <td>{{ prescription.nomMedicament }}</td>
                    </tr>
                    <tr>
                        <th>Date du RDV</th>
                        <td>{{ prescription.RDVCard ? prescription.RDVCard.date|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Dosage</th>
                        <td>{{ prescription.dosage }}</td>
                    </tr>
                    <tr>
                        <th>Durée</th>
                        <td>{{ prescription.duree }}</td>
                    </tr>
                    <tr>
                        <th>Notes</th>
                        <td>{{ prescription.notes }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

  <div class="mt-4 d-flex justify-content-end gap-2"> <!-- justify-content-end pour aligner à droite -->
    <a href="{{ path('app_prescription_edit', {'id': prescription.id}) }}" class="btn btn-custom-warning">Modifier</a>
    <form action="{{ path('app_prescription_delete', {'id': prescription.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette prescription ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prescription.id) }}">
        <button type="submit" class="btn btn-custom-danger">Supprimer</button>
    </form>
</div>

</div>

<style>
    .prescription-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
        width: 30%;
    }

    .table td {
        background-color: #ffffff;
    }

    /* Styles personnalisés pour les boutons */
    .btn-custom-warning,
    .btn-custom-danger,
    .btn-custom-secondary {
           min-width: 120px; 
         height: 50px;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: 600;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        text-align: center;
        display: inline-block;
        width: auto; /* Ajustement pour s'assurer que la largeur est basée sur le contenu */
    }

    .btn-custom-warning {
        background-color:rgb(63, 158, 79);
        color: #000;
    }

    .btn-custom-warning:hover {
        background-color:rgb(63, 158, 79);
        transform: translateY(-2px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-custom-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-custom-danger:hover {
        background-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-custom-secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .btn-custom-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .d-flex {
        display: flex;
    }

    .justify-content-start {
        justify-content: flex-start;
    }

    .gap-2 {
        gap: 10px;
    }
</style>
{% endblock %}