<div class="container prescription-container">
    <div class="card card-prescription shadow-lg">
        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="row g-4">
                <!-- Première colonne -->
                <div class="col-md-6">
                    <div class="form-floating mb-4">
                                           
                        {{ form_widget(form.nomMedicament, {'attr': {'class': 'form-control' ~ (form.nomMedicament.vars.valid ? '' : ' is-invalid'), 'placeholder': ' EX. Doliprane'}}) }}
                         {{ form_label(form.nomMedicament, 'Nom du médicament', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.nomMedicament)|striptags }}</div>
                    </div>

                    <div class="form-floating mb-4">
                                           

                        {{ form_widget(form.dosage, {'attr': {'class': 'form-control' ~ (form.dosage.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex. Une fois par jour '}}) }}
                         {{ form_label(form.dosage, 'Dosage', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.dosage)|striptags }}</div>
                    </div>
                </div>

                <!-- Deuxième colonne -->
                <div class="col-md-6">
                    <div class="form-floating mb-4">
                                            

                        {{ form_widget(form.duree, {'attr': {'class': 'form-control' ~ (form.duree.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex. 1 semaine '}}) }}
                       {{ form_label(form.duree, 'Durée', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.duree)|striptags }}</div>
                    </div>

                    <div class="form-floating mb-4">
                        {{ form_widget(form.RDVCard, {'attr': {'class': 'form-select' ~ (form.RDVCard.vars.valid ? '' : ' is-invalid'), 'placeholder': 'EX. Prendre avec un repas '}}) }}
                        {{ form_label(form.RDVCard, 'Rendez-vous associé', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.RDVCard)|striptags }}</div>
                    </div>
                </div>

                <!-- Champ full-width -->
                <div class="col-12">
                    <div class="form-floating mb-4">
                                           
                        {{ form_widget(form.notes, {'attr': {'class': 'form-control' ~ (form.notes.vars.valid ? '' : ' is-invalid'), 'placeholder': ' ', 'style': 'height: 100px'}}) }}
                        {{ form_label(form.notes, 'Notes', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.notes)|striptags }}</div>
                    </div>
                </div>

                <!-- Bouton de soumission -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary btn-action px-4">
                        <i class="bi bi-save me-2"></i>{{ button_label|default('Enregistrer') }}
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    /* Styles existants */
    .card-prescription {
        border-radius: 1rem;
        border: 1px solid rgba(0, 0, 0, 0.125);
        transition: transform 0.3s ease;
    }

    .card-prescription:hover {
        transform: translateY(-5px);
    }

    /* Nouveaux styles pour les labels */
    .form-floating > label {
        color: #2c3e50;
        font-weight: 600;
        font-family: 'Segoe UI', system-ui, sans-serif;
        padding: 0.75rem 1.25rem;
        transition: all 0.2s ease;
        opacity: 0.9;
    }

    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        opacity: 1;
        transform: translateY(-0.5rem) scale(0.85);
    }

    /* Styles améliorés pour le bouton */
    .btn-action {
        border: 2px solid transparent;
        border-radius: 0.8rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 500;
        letter-spacing: 0.5px;
        padding: 0.75rem 1.5rem;
    }

    .btn-action:hover {
        background-color: #0b5ed7;
        border-color: #094bac;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.25);
    }

    .btn-action:active {
        transform: translateY(0);
        box-shadow: none;
    }

    /* Styles existants */
    .form-control:focus, .form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-control.is-invalid, .form-select.is-invalid {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }

    .invalid-feedback {
        font-size: 0.85em;
        margin-top: 0.25rem;
    }
</style>